<h1 class="text-center mb-3">Enter new client</h1>

<form action="/" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="name" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="gender">Gender</label>
        <input type="gender" name="gender" class="form-control">
    </div>

    <div class="form-group">
        <label for="photo">Photo</label>
        <input type="photo" name="photo" class="form-control">
    </div>


    <input type="submit" value="Add client" class="btn btn-primary btn-block" style="margin-top: 20px;" >


</form>
